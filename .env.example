# ===================
# Docker Environment
# ===================

# Application
APP_ENV=production
APP_DEBUG=false

# Ports
GATEWAY_PORT=8000
FRONTEND_PORT=3000

# CORS (comma-separated for multiple origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database Root Password
DB_ROOT_PASSWORD=secret

# Auth Service Database
AUTH_DB_DATABASE=auth_service
AUTH_DB_USERNAME=auth_user
AUTH_DB_PASSWORD=auth_secret

# IP Service Database
IP_DB_DATABASE=ip_service
IP_DB_USERNAME=ip_user
IP_DB_PASSWORD=ip_secret
